<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			<img src="assets/img/burger_img.jpg" alt="Eat-Da-Burger App" width="350">
			<h1>Eat-Da-Burger!</h1>
			<p></p>
		</div>
	</div>


	<div class="row">
		<div class="col-sm-6">
			<ul>
				{{#each burgers}} {{#unless this.devoured}}
				<li>
					{{this.id}} {{this.burger_name}}
					<span align="right">
						<form action="/{{this.id}}?_method=PUT" method="POST">
							<input type="hidden" name="devoured" value="true">
							<button class="btn-primary" type="submit">Devour It!</button>
						</form>
					</span>
				</li>
				{{/unless}} {{/each}}
			</ul>

		</div>

		<div class="col-sm-6">
			{{#each burgers}} {{#if this.devoured}}
			<li>
				{{this.id}} {{this.burger_name}}

			</li>
			{{/if}} {{/each}}

		</div>

	</div>


	<div class="row">
		<div class="center col-sm-12">



			<form class="create-update-form" action="/" method="POST">

				<div class="form-group">
					<p>Enter a burger you want to order and click the "Submit" button.</p>
					<input type="text" id="ca" name="burger_name">
				</div>

				<button class="btn-primary" type="submit">Submit </button>
			</form>

		</div>

	</div>


</div>